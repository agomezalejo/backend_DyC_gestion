{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Nodemon Debug",
        "runtimeExecutable": "nodemon",
        "program": "${workspaceFolder}/app.js",
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "env": {
          "NODE_ENV": "development"
        },
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }
  